<div class="row">

  <div class="col d-flex justify-content-center" >
    <br/>

    <%= form_tag(emails_path, method: "post", remote: true)  do %>
    <%= submit_tag("Recevoir un email", class: "btn btn-secondary btn-lg") %>
    <%end%>

    <br /><br />
  </div>
  <div class="col">
  </div>
</div>



<div class="row">
  <div class="col">
    <h2>Liste email</h2>

    <table class="table table-hover">
      <thead>
        <tr class="table-primary">
          <th scope="col">Objet</th>
        </tr>
      </thead>

      <tbody id="emails">
			  <% @emails.each do |email|  %>
              
          <tr class="table-light" id="<%=email.id%>">
            <td ><%= link_to email.object, email_path(email.id)%></th>
          </tr>
			  <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="col">
    <h2 id="emailObject">Objet Email </h2>
    <p id="emailBody"> Body Email </p>
  </div>
</div>